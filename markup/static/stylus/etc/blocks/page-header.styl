.page-header__row-top
  position relative
  
  padding 15px 0
  
  background linear-gradient(to top, #EF4643, #F86846)
  
.page-header__row-bottom
  padding 17px 0
  
.hamburger
  position absolute
  top 0
  bottom 0
  
  display none
  height 24px
  margin auto
  padding 0
  &:focus
    outline none
    
.hamburger-inner, .hamburger-inner::before, .hamburger-inner::after
  background-color white
  
@media(max-width 1199px)
  .hamburger
    display block
  
@media(max-width 890px)
  .page-header
    position fixed
    left 0
    right 0
    z-index 30
  
  .page-header__row-top
    padding 5px 0
  
  .page-header__nav-wrap
    display none
    
  .page-header__row-bottom
    position fixed
    top 70px
    left 0
    right 0
    bottom 54px
    
    display flex
    flex-direction column
    align-items center
    
    background-color white
    
    opacity 1

    transition all 0.2s ease
    .container
      flex-grow 1
      display flex
      flex-direction column
      width auto
    &--close
      visibility hidden
      width 0
      
      opacity 0
      
      transform translateX(400px)
      transition all 0.2s ease, opacity 0.1s ease
      
@media(max-width 822px)
  .page-header__row-bottom
    left 34.37%
    
@media(max-width 580px)
  .page-header__row-bottom
    left 0
    
@media(max-width 470px)
  .page-header__row-bottom
    top 54px