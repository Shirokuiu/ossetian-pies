.user-block
  &--fixed
    position fixed
    left 0
    right 0
    bottom 0
    z-index 50
    
    margin auto
    padding 6px 17px
    
    background-color #fdde72
    
    border-radius 0 0 5px 5px
    
    opacity 0.95
  &--footer
    margin-bottom 40px

.user-block__basket
  position relative
  &::before,
  &::after
    content ''
    
    position absolute
    top 0
    bottom 0

    width 1px
    height 80px
    margin auto

    background-color rgba(255, 255, 255, 0.4)
  &::before
    left 0
  &::after
    right 0
    
.user-block__basket-indicator
  position absolute
  top -4px
  right 7px
  
  box-sizing border-box
  overflow hidden
  width 32px
  height 32px
  
  font-size 19px
  line-height 34px
  color white
  text-align center
  
  background-color green
  
  border-radius 50%
  
.user-block__basket-icon
  bg($basket)
  
.user-block__phone-icon
  width 29px
  height 32px
  .phone
    width 29px
    height 32px
    
    fill white
    
.user-block__fixed-basket
  box-sizing border-box
  min-width 370px
  padding 10px 15px
  
  background linear-gradient(to top, #EF4643, #F86846)
  
  border-radius 5px
  &:hover
    background linear-gradient(to bottom, #EF4643, #F86846)
    
.user-block__fixed-basket-basket-icon
  bg($basket)
  
.user-block__fixed-basket-result
  font-size 21px
  line-height 25px
  font-weight 400
  color white
  
.user-block__fixed-basket-result-span
  margin-right 5px
  
  font-size 24px
  line-height 29px
  font-weight 700
  
.user-block__fixed-basket-purse-icon
  width 29px
  height 32px
  .purse
    display block
    width 29px
    height 32px
    
    fill white
    
.user-block__fixed-basket-time-icon
  width 29px
  height 32px
  .time
    display block
    width 29px
    height 32px
    
    fill #6e6b67
    
.user-block__fixed-basket-time-text
  font-size 16px
  line-height 19px
  font-weight 400
  color black
  
.user-block__fixed-basket-favorite-icon
  width 29px
  height 32px
  
  cursor pointer
  .star-no-fill
    display block
    width 29px
    height 32px
    
    fill #6e6d6e
  &:hover
    .star-no-fill
      fill red
      
.user-block__fixed-basket-favorite-link
  position relative
  
  font-size 16px
  line-height 19px
  color black

  transition all 200ms linear
  &::after
    content ''

    position absolute
    left 0
    bottom -2px

    width 100%
    height 1px
    margin auto

    background-color black

    transition width 200ms linear
  &:hover
    color red
    &::after
      width 0
      
.user-block__fixed-basket-socials
  width 24px
  height 24px
  
  background-repeat no-repeat
  
  border-radius 5px
  &--vk
    background-image url('%=static=%content/vk.svg')
  &--fb
    background-color white
    background-image url('%=static=%content/fb.svg')
  &--od
    background-color white
    background-image url('%=static=%content/od.svg')
  &--g
    background-color white
    background-image url('%=static=%content/g.svg')
  &--tw
    background-color white
    background-image url('%=static=%content/tw.svg')
  &--v
    background-color white
    background-image url('%=static=%content/v.svg')
  &--wa
    background-color white
    background-image url('%=static=%content/wa.svg')
    
.user-block__fixed-basket-tel
  font-size 29px
  line-height 34px
  font-weight 700
  color #464340
  
.user-block__table-basket-wrap
  margin-left 3%
  margin-right 7%
  
.user-block__table-basket
  width 100%
  
.user-block__table-basket-row-top
  background-color #fda07e
  
.user-block__table-basket-row-top-td
  padding 20px 0
  &--name
    width 44.6%
  
.user-block__table-basket-price
  reset()
  
  font-size 2.24vw
  line-height 2.652vw
  font-weight 700
  color green
  
.user-block__table-basket-price-span
  margin-left 5px
  
  font-size 24px
  line-height 29px
  font-weight 400
  color green
  
.user-block__table-basket-cancel
  position relative
  
  width 22px
  height 22px
  
  exit(100%, 5px, #dcdcdc)
  &::after,
  &::before
    transition 0.2s ease
  &:hover
    &::after,
    &::before
      background-color red
  &:focus
    &::after,
    &::before
      background-color red
      
.user-block__table-basket-payment-controls
  box-sizing border-box
  width 40%
  height 40px
  
  border 1px solid #c0c0c0
  border-radius 5px
  
.user-block__table-basket-payment-control
  display flex
  justify-content center
  align-items center
  
  background-color #f5f5f5
  &--minus
    border-radius 5px 0 0 5px
    &::before
      content ''
      
      width 51%
      height 4px
      
      background-color #808080
  &--plus
    position relative
    
    border-radius 0 5px 5px 0
    &::before,
    &::after
      center-absolute()
      
      content ''
      
      width 51%
      height 4px
      
      background-color #808080
    &::before
      transform rotate(90deg)
    
.user-block__table-basket-payment-input
  font-size 1.09vw
  line-height 1.31vw
  color #696969
  
.user-block__table-basket-img-wrap
  width 80px
  margin-right 4%
  
.user-block__table-basket-name
  padding-top 12px
  padding-left 30px
  padding-bottom 12px
  
.user-block__table-basket-row-cart
  box-shadow 0px 2px 11px -4px rgba(0,0,0,0.2)
  
.user-block__table-basket-total-price-wrap
  padding-right 3%
  
.user-block__table-basket-sum
  width 20%
  
.user-block__table-basket-total-price-text
  margin-right 60px
  
  font-size 29px
  line-height 34px
  font-weight 700
  
.user-block__table-basket-total-price-sum
  font-size 43px
  line-height 51px
  font-weight 700
  color red
  
.user-block__table-basket-total-price-sum-span
  margin-left 5px
  
  font-size 43px
  line-height 51px
  font-weight 700
  color red
  
.user-block__table-basket-order-wrap
  padding 20px 0
  
  background-color #fff6d7
  
.user-block__table-basket-order-content
  margin-left 4%
  margin-right 4%
  
.user-block__basket-order-select
  position relative
  
.user-block__basket-order-select-input-wrap
  position relative
  
  background-color white
  
  border-radius 5px
  
  cursor pointer
  &:hover
    .user-block__basket-order-select-input
      border-color red
    .user-block__basket-order-select-input-icon
      .metro
        fill red
    .user-block__basket-order-select-input-arrow
      &::before,
      &::after
        background-color red
  &--open
    .user-block__basket-order-select-input
      border-bottom-color transparent !important
      border-radius 5px 5px 0 0
    &:hover
      .user-block__basket-order-select-input
        border-color #dcdcdc
      .user-block__basket-order-select-input-icon
        .metro
          fill #dcdcdc
      .user-block__basket-order-select-input-arrow
        &::before,
        &::after
          background-color #dcdcdc
  
.user-block__basket-order-select-input
  padding-top 14px
  padding-left 50px
  padding-bottom 16px
  
  border 1px solid #dcdcdc
  border-radius 5px
  
  cursor pointer
  
  transition 0.2s ease
  
.user-block__basket-order-select-input-icon
  position absolute
  top 0
  left 12px
  bottom 0
  
  width 23px
  height 23px
  margin auto
  .metro
    width 23px
    height 23px
    
    fill #dcdcdc
    
    transition 0.2s ease
    
.user-block__basket-order-select-input-arrow
  position absolute
  top 0
  right 15px
  bottom 0
  
  width 16px
  height 10px
  margin auto
  &::before,
  &::after
    center-absolute()
    
    content ''
    
    width 70%
    height 3px
    
    background-color #dcdcdc
    
    transition 0.2s ease
  &::before
    left -6px
    
    transform rotate(45deg)
  &::after
    right -6px
    
    transform rotate(-45deg)
    
.user-block__basket-order-select-content
  position absolute
  left 0
  right 0
  z-index 10
  
  margin auto
  
  background-color white
  box-shadow 0px 2px 11px -4px rgba(0,0,0,0.2)
  
  border 1px solid #dcdcdc
  border-top none
  border-radius 0 0 5px 5px
  
.user-block__basket-order-select-content-text
  padding 10px
  padding-left 50px
  
  cursor pointer
  
  transition 0.2s ease
  &:hover
    color white
    
    background-color red
  &:last-child
    border-radius 0 0 5px 5px
    
.user-block__basket-order-items-wrap
  width 50%
  
.user-block__basket-order-payment-method-headline
  margin-right 15px
  
  font-size 24px
  line-height 29px
  font-weight 700
  
.user-block__basket-order-payment-method-wrap
  margin-right 20px
  &:last-child
    margin-right 0
  
.user-block__basket-order-payment-method-input
  &:checked + .user-block__basket-order-payment-method-text
    .user-block__basket-order-payment-method-indicator
      border-color red
      &::before
        display block
        
.user-block__basket-order-sell-wrap
  position relative
  
.user-block__basket-order-payment-method-text
  position relative
  
  padding-left 35px
  
  cursor pointer
  &:hover
    .user-block__basket-order-payment-method-indicator
      border-color red
  
.user-block__basket-order-payment-method-indicator
  position absolute
  top 0
  left 0
  bottom 0
  
  box-sizing border-box
  display flex
  justify-content center
  align-items center
  width 24px
  height 24px
  margin auto
  
  border 2px solid #c0c0c0
  border-radius 50%
  
  transition 0.2s ease
  &::before
    content ''
    
    display none
    width 12px
    height 12px
    
    background-color red
    
    border-radius 50%
    
.user-block__table-basket-order-content-img-wrap
  width 400px
  margin-left 4%
  
.user-block__table-basket-order-content-headline
  font-size 19px
  line-height 24px
  
