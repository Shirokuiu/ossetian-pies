.user-block
  &--fixed
    position fixed
    left 0
    right 0
    bottom 0
    z-index 50
    
    margin auto
    padding 6px 17px
    
    background-color #fdde72
    
    border-radius 0 0 5px 5px
    
    opacity 0.95
  &--footer
    margin-bottom 40px

.user-block__basket
  position relative
  &::before,
  &::after
    content ''
    
    position absolute
    top 0
    bottom 0

    width 1px
    height 80px
    margin auto

    background-color rgba(255, 255, 255, 0.4)
  &::before
    left 0
  &::after
    right 0
    
.user-block__basket-indicator
  position absolute
  top -4px
  right 7px
  
  box-sizing border-box
  overflow hidden
  width 32px
  height 32px
  
  font-size 19px
  line-height 34px
  color white
  text-align center
  
  background-color green
  
  border-radius 50%
  
.user-block__basket-icon
  bg($basket)
  
.user-block__phone-icon
  width 29px
  height 32px
  .phone
    width 29px
    height 32px
    
    fill white
    
.user-block__fixed-basket
  box-sizing border-box
  min-width 370px
  padding 10px 15px
  
  background linear-gradient(to top, #EF4643, #F86846)
  
  border-radius 5px
  &:hover
    background linear-gradient(to bottom, #EF4643, #F86846)
    
.user-block__fixed-basket-basket-icon
  bg($basket)
  
.user-block__fixed-basket-result
  font-size 21px
  line-height 25px
  font-weight 400
  color white
  
.user-block__fixed-basket-result-span
  margin-right 5px
  
  font-size 24px
  line-height 29px
  font-weight 700
  
.user-block__fixed-basket-purse-icon
  width 29px
  height 32px
  .purse
    display block
    width 29px
    height 32px
    
    fill white
    
.user-block__fixed-basket-time-icon
  width 29px
  height 32px
  .time
    display block
    width 29px
    height 32px
    
    fill #6e6b67
    
.user-block__fixed-basket-time-text
  font-size 16px
  line-height 19px
  font-weight 400
  color black
  
.user-block__fixed-basket-favorite-icon
  width 29px
  height 32px
  
  cursor pointer
  .star-no-fill
    display block
    width 29px
    height 32px
    
    fill #6e6d6e
  &:hover
    .star-no-fill
      fill red
      
.user-block__fixed-basket-favorite-link
  position relative
  
  font-size 16px
  line-height 19px
  color black

  transition all 200ms linear
  &::after
    content ''

    position absolute
    left 0
    bottom -2px

    width 100%
    height 1px
    margin auto

    background-color black

    transition width 200ms linear
  &:hover
    color red
    &::after
      width 0
      
.user-block__fixed-basket-socials
  width 24px
  height 24px
  
  background-repeat no-repeat
  
  border-radius 5px
  &--vk
    background-image url('%=static=%content/vk.svg')
  &--fb
    background-color white
    background-image url('%=static=%content/fb.svg')
  &--od
    background-color white
    background-image url('%=static=%content/od.svg')
  &--g
    background-color white
    background-image url('%=static=%content/g.svg')
  &--tw
    background-color white
    background-image url('%=static=%content/tw.svg')
  &--v
    background-color white
    background-image url('%=static=%content/v.svg')
  &--wa
    background-color white
    background-image url('%=static=%content/wa.svg')
    
.user-block__fixed-basket-tel
  font-size 29px
  line-height 34px
  font-weight 700
  color #464340
  
@media(max-width 1580px)
  .user-block__fixed-basket
    min-width auto
    
  .user-block__fixed-basket-result-left-wrap
    margin-right 10px
    
  .user-block__fixed-basket-basket-icon
    margin-right 10px
    
  .user-block__fixed-basket-purse-icon
    margin-right 10px
  
  .user-block__fixed-basket-result
    font-size 16px
    line-height 19px
    
  .user-block__fixed-basket-result-span
    font-size 19px
    line-height 24px
    
  .user-block__fixed-basket-tel
    font-size 21px
    line-height 24px
  
@media(max-width 1450px)
  .user-block__basket
    width 62px
    
  .user-block__fixed-basket
    padding 5px 5px
    
  .user-block__basket-indicator
    top 4px
    
    width 25px
    height 25px
    padding-right 1px
    
    font-size:16px
    line-height 26px
    
  .user-block__basket-icon
    bg($basket1450)
    
  .user-block__work-time
    font-size 14px
    line-height 17px
    
  .user-block__work-tel
    font-size 16px
    line-height 19px
    
  .user-block__fixed-basket-result
    font-size 12px
    
  .user-block__fixed-basket-result-span
    font-size 16px
    
  .user-block__fixed-basket-basket-icon
    bg($basket1450)
    
  .user-block__fixed-basket-purse-icon
    width 24px
    .purse
      width 24px
      
  .user-block__fixed-basket-time-icon
    width 22px
    margin-right 5px
    .time
      width 22px
      
  .user-block__fixed-basket-favorite-icon
    width 22px
    margin-right 5px
    .star-no-fill
      width 22px
      
  .user-block__fixed-basket-time-text
    font-size 14px
    line-height 17px
    
  .user-block__fixed-basket-favorite-link
    font-size 14px
    line-height 17px
    
  .user-block__fixed-socials-text
    font-size 14px
    line-height 17px
    
  .user-block__fixed-basket-tel
    font-size 16px
    line-height 19px
    
@media(max-width 1199px)
  .user-block
    &--header
      display none
      
  .user-block__fixed-list-socials
    display none
    
  .user-block__work-time
    padding-left 0
    
@media(max-width 820px)
  .user-block__fixed-list-work-time
    display none
    
  .user-block__fixed-list-favorite
    display none
    
@media(max-width 800px)
  .user-block
    &--footer
      margin-bottom 5px
  
  .user-block__work-time
    text-align center
    
@media(max-width 410px)
  .user-block__fixed-basket-list-item
    flex-grow 1
    
  .user-block__fixed-basket
    justify-content space-around
  
  .user-block__fixed-list-tel
    display none